{
  "name": "shingo-auth-api",
  "version": "1.0.0",
  "description": "Provide auth services for Shingo APIs",
  "main": "index.js",
  "dependencies": {
    "@types/express": "^4.0.35",
    "grpc": "^1.12.4",
    "jwt-simple": "^0.5.1",
    "mysql": "^2.15.0",
    "scrypt": "^6.0.3",
    "typeorm": "0.1.0-alpha.4",
    "typescript": "^2.9.2",
    "winston": "^2.4.0"
  },
  "scripts": {
    "start": "node ./build/index.js",
    "proto": "mkdir -p build/proto && cp src/microservices/*.proto build/proto/",
    "build": "npm run proto && tsc -p ./tsconfig.json",
    "test": "cd specs && tsc && alsatian **/*.spec.js",
    "coverage": "nyc --reporter=lcov --reporter=html npm run test && nyc report"
  },
  "author": "Dustin E. Homan",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^10.5.4",
    "alsatian": "^2.2.1",
    "nyc": "^12.0.2",
    "tap-summary": "^4.0.0",
    "ts-mockito": "^2.0.1",
    "ts-node": "^7.0.0"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      "build"
    ]
  }
}
