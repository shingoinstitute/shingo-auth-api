{
  "scripts": {
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"packages/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:lint": "tslint --project . && prettier \"packages/**/*.ts\" --list-different",
    "test:unit": "./scripts/test.js",
    "test:unit:watch": "./scripts/test.js --watch",
    "test:security": "npm audit",
    "build": "run-s build:*",
    "build:proto": "lerna run build:proto",
    "build:main": "lerna run build:main"
  },
  "devDependencies": {
    "@shingo/proto2ts": "^0.1.1",
    "@shingo/tslint-rules": "^1.1.0",
    "@types/jest": "^23.3.2",
    "jest": "^23.6.0",
    "lerna": "^3.3.2",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "trash-cli": "^1.4.0",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.spec.json"
      }
    },
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": -15
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs,ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      ".*\\.d\\.ts",
      "<rootDir>/src/(.*)?/__tests__/(.*)?\\.helper\\.ts",
      "<rootDir>/src/(.*)?/__tests__/(.*)?__helper__(.*)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/src/(.*)?/__tests__/(.*)?\\.helper\\.ts",
      "<rootDir>/src/(.*)?/__tests__/(.*)?__helper__(.*)"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs,ts,tsx}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs,ts,tsx}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs",
      "ts",
      "tsx"
    ]
  }
}
