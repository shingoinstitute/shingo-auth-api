{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "target": "es6",
    "outDir": "build",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "./@types/*",
        "*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.mock.ts",
    "**/*.spec.ts"
  ]
}
