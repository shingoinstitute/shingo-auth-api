{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [ "es2015" ],
        "outDir": "./js/"
    },
    "buildOnSave": false,
    "compileOnSave": false,
    "exclude": [
        "./**/*.d.ts"
    ],
    "filesGlob": [
        "../**/*.ts"
    ]
}